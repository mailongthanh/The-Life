<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6A127A"
    tools:context=".AiLaTrieuPhu_ing">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:onClick="btn_close"
                        android:padding="8dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/altp_close"
                        app:tint="#fff"
                        android:layout_marginRight="20dp"/>
                    <ImageView
                        android:onClick="btn_hoikhangia"
                        android:padding="8dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/altp_hoikhangia"
                        app:tint="#fff"
                        android:layout_marginRight="20dp"/>
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/altp_logo"/>
                    <ImageView
                        android:onClick="btn_doicauhoi"
                        android:padding="8dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/altp_cauhoikhac"
                        app:tint="#fff"
                        android:layout_marginLeft="20dp"/>
                    <ImageView
                        android:onClick="btn_5050"
                        android:padding="8dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/altp_5050"
                        app:tint="#fff"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/txvCauHoi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textSize="20sp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:layout_margin="20dp"
                        android:background="@drawable/altp_btn"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center">
                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#FFEB3B"/>
                    <TextView
                        android:id="@+id/txvCauTL1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/altp_btn"
                        android:text=""
                        android:textColor="#fff"
                        android:gravity="center"
                        android:textSize="18sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center">
                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#FFEB3B"/>
                    <TextView
                        android:id="@+id/txvCauTL2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/altp_btn"
                        android:text=""
                        android:textColor="#fff"
                        android:gravity="center"
                        android:textSize="18sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center">
                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#FFEB3B"/>
                    <TextView
                        android:id="@+id/txvCauTL3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/altp_btn"
                        android:text=""
                        android:textColor="#fff"
                        android:gravity="center"
                        android:textSize="18sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center">
                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#FFEB3B"/>
                    <TextView
                        android:id="@+id/txvCauTL4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/altp_btn"
                        android:text=""
                        android:textColor="#fff"
                        android:gravity="center"
                        android:textSize="18sp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/txvThuaGame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="dsadsads"
            android:background="#673AB7"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="#6A127A"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:gravity="center"
        android:padding="10dp"
        >
        <ListView
            android:id="@+id/lsvTienThuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>