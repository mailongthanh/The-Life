<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="300dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="@drawable/custom_button_menu"
    android:backgroundTintMode="@null">

    <TextView
        android:id="@+id/textviewDialogEventTitle"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đây là tiêu đề"
        android:fontFamily="@font/anton"
        android:textColor="@color/Blue"
        android:textSize="20sp"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/dialog_event_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_dialog"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/textviewDialogEventContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đây là nội dung của sự kiện"
            android:textSize="17sp"
            android:padding="5dp"
            android:textColor="@color/Blue"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"/>
        <LinearLayout
            android:id="@+id/linearHappy"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="3dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/happy"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Red"
                android:text="Hạnh phúc:"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textviewResultHappy"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="-1"
                android:textStyle="bold"
                android:textColor="#2EDD06"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearHealth"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="3dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/heartbeat"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Sức khỏe:"
                android:textColor="@color/Red"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textviewResultHealth"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="-1"
                android:textColor="#2EDD06"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearSmart"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="3dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/mental_health"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Thông minh:"
                android:textStyle="bold"
                android:textColor="@color/Red"/>
            <TextView
                android:id="@+id/textviewResultSmart"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="-1"
                android:textColor="#2EDD06"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearAppearance"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="3dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/appearance"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Ngoại hình:"
                android:textColor="@color/Red"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textviewResultAppearance"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="-1"
                android:textColor="#2EDD06"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearMoney"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="3dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/asset"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Tài khoản:"
                android:textStyle="bold"
                android:textColor="@color/Red"/>
            <TextView
                android:id="@+id/textviewResultMoney"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="-1"
                android:textStyle="bold"
                android:textColor="#2EDD06"/>

        </LinearLayout>

        <Button
            android:id="@+id/buttonDialogEventOke"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Đồng ý"
            android:textColor="@color/black"
            android:background="@drawable/custom_button_menu"
            app:backgroundTint="@null"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

</LinearLayout>